            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Dental Starter Kit\",\n  \"description\": \"Complete starter kit for dental clinics. Includes essential examination tools.\",\n  \"category\": \"Kits\",\n  \"subcategory\": \"Starter Kits\",\n  \"price\": 299.99,\n  \"comparePrice\": 399.99,\n  \"productType\": \"package\",\n  \"packageItems\": [\n    {\n      \"productId\": \"product_id_1\",\n      \"quantity\": 5\n    },\n    {\n      \"productId\": \"product_id_2\",\n      \"quantity\": 3\n    },\n    {\n      \"productId\": \"product_id_3\",\n      \"quantity\": 2\n    }\n  ],\n  \"inventory\": {\n    \"quantity\": 50,\n    \"lowStockAlert\": 5\n  },\n  \"images\": [\n    \"https://example.com/dental-kit.jpg\"\n  ],\n  \"seo\": {\n    \"metaTitle\": \"Dental Starter Kit - Complete Package\",\n    \"metaDescription\": \"Save money with our complete dental starter kit.\",\n    \"slug\": \"dental-starter-kit\"\n  },\n  \"tags\": [\"kit\", \"starter\", \"bundle\", \"savings\"],\n  \"status\": \"active\",\n  \"featured\": true\n}"
