              "raw": "{\n  \"name\": \"Dental Mirror\",\n  \"description\": \"High-quality stainless steel dental mirror for professional use.\",\n  \"category\": \"Dental Tools\",\n  \"subcategory\": \"Examination\",\n  \"price\": 15.99,\n  \"comparePrice\": 19.99,\n  \"cost\": 8.00,\n  \"productType\": \"single\",\n  \"inventory\": {\n    \"quantity\": 100,\n    \"lowStockAlert\": 10,\n    \"trackQuantity\": true\n  },\n  \"images\": [\n    \"https://example.com/dental-mirror.jpg\"\n  ],\n  \"specifications\": {\n    \"brand\": \"MK Dental\",\n    \"model\": \"DM-100\",\n    \"material\": \"Stainless Steel\"\n  },\n  \"seo\": {\n    \"metaTitle\": \"Dental Mirror - Professional Grade\",\n    \"metaDescription\": \"High-quality dental mirror for professional dental examination.\",\n    \"slug\": \"dental-mirror-professional\"\n  },\n  \"tags\": [\"dental\", \"mirror\", \"examination\", \"tools\"],\n  \"status\": \"active\",\n  \"featured\": false\n}"
